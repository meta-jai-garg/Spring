<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="textEditor"
	class="com.metacube.training.auto_wiring_auto_detect.TextEditor"
	autowire="default">
		<property name="name" value="Generic Text Editor"></property>
		<property name="spellChecker" ref="spellChecker"></property>

	</bean>

	<!-- Definition for spellChecker bean -->
	<bean id="spellChecker"
		class="com.metacube.training.auto_wiring_auto_detect.SpellChecker" />

</beans>